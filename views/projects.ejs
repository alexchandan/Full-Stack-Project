    <%- include('./partials/navbar.ejs') %>
        <div class="container-fluid mt-3">
            <div class="row">
                <div class="col-sm-6 mb-3">
                    <div id="carouselExample" class="carousel slide  box-shadow">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="images/product/add.png" class="d-block w-100 crousel-img filter" alt="Add">
                            </div>
                            <div class="carousel-item">
                                <img src="images/product/details.png" class="d-block w-100 crousel-img filter"
                                    alt="details">
                            </div>
                            <div class="carousel-item">
                                <img src="images/product/edit.png" class="d-block w-100 crousel-img filter"
                                    alt="Details">
                            </div>
